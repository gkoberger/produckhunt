@import 'nib';

.fa.fa-right:before
  margin-right 5px

.fa.fa-left:before
  margin-left 5px

.middot
  display inline
  &:before
    content "\00b7"
    padding 0 5px
    display inline-block

greyish = #eee
mono = 'VT323', Courier

body
  background-color greyish
  &.mobile.ready
    background-color #000
    min-height 150px
    transition background-color 0.2s ease-out
    #getStarted
      text-align: center;
      padding: 50px;
    #getStarted a
      display: inline-block;
      text-align: center;
      color: #fff;
      text-decoration: none;
      background-color: #d85636;
      font-family: 'VT323', Courier;
      padding: 8px 15px;
      font-size: 20px;
      border-top: 5px solid #fff;
      border-bottom: 5px solid #fff;
      position: relative;
      &:before, &:after
        width: 5px;
        height: 100%;
        position: absolute;
        top: 0;
        left: -5px;
        background-color: #FFF;
        display: block;
        content: "";
      &:after
        right: -5px;
        left: auto;
    &.flash
      background-color #fff
      transition background-color 0s
    #trigger
      width 100%
      height 100%
      display block
      position absolute
      top 0
      left 0
      background-image url("../img/instructions.png")
      background-repeat no-repeat
      background-position center center
      background-size contain

